/* 默认样式设定 */
* {
    margin: 0;
    padding: 0;
    color: #666666;
    font-size: 16px;
    font-family:  '微软雅黑',Arial, 'Microsoft Yahei', Helvetica, sans-serif;
}
h1,h2,h3,h4,h5,h6{
	font-family: inherit;
	font-weight: 500;
	line-height: 1.1;
}
table {
    border-spacing: 0px;
    border-collapse: collapse;
}
a{ text-decoration: none;}
a {
    color: #666666;
}
a:hover,a:focus{
    text-decoration: none;
}
input[type="text"],select{font-size:14px; color:#666; border: solid 1px #EEEEEE; height: 30px;}
option{text-indent: 5px;}
a, input, select, textarea, a:hover, input:hover, select:hover, textarea:hover {
	outline: none;
}

li {
    list-style: none;
}
option {
	font-size: 14px;
}

.fl{
	float: left;
}
.fr{
	float: right;
}
.top50{
	margin-top: 50px;
}
.ft40{
	font-size: 40px;
}
.ft18{
	font-size: 18px;
}
/*分页*/
.page{
	margin-bottom: 70px;
	margin-right: 1px;
	overflow: hidden;
	float: right;
}
.page .calendar{
	font-size: 14px;
	margin-top:4px;
}
.page .calendar em{
	color: #F96116;
	font-style: normal;
	font-size: 14px;
	margin:0 4px;
}
.page a{
	border: solid 1px #eeeeee;
	height: 29px;
	padding: 0 11px;
	line-height: 29px;
	float: left;
	color: #666666;
	font-size: 14px;
	margin-left:-1px;
}
.page a.sel{
	color: #FFFFFF;
	background: #736370;
	border: solid 1px #736370;
}
.page select{
	width: 58px;
	height: 30px;
	text-align: center;
	font-size: 14px;
	border: solid 1px #EEEEEE;
}
.page span{ 
	float: left;
	margin-left: 10px;
}
.page .page-number{
    width: 48px;
    text-align: center;
    height: 30px;
    border: 1px solid #EEE;
}
.page .page-go {
    background: #FFF;
    width: 37px;
    border: solid 1px #EEEEEE;
    border-left:none;
    -moz-border-top-colors: none;
    -moz-border-right-colors: none;
    -moz-border-bottom-colors: none;
    -moz-border-left-colors: none;
    border-image: none;
    height: 32px;
    font-size: 14px;
    cursor: pointer;
}
.page span input {
    float: left;
}





/*==========以下部分是Validform必须的===========*/
.Validform_checktip{
	margin-left:8px;
	line-height:30px;
	height:30px;
	overflow:hidden;
	color:#fff !important;
	font-size: 12px !important;
	position: absolute;
	border-top-right-radius: 3px;
	border-bottom-right-radius: 3px;
}
.Validform_right{
	display: none;
}
.Validform_wrong{
	padding-left: 20px;
	white-space: nowrap;
	background: url(../images/validform-la.jpg) no-repeat left #F90;
}
.resetpassword .staff .Validform_wrong{
	background: url(../images/validform-la2.jpg) no-repeat left #F90;
}
.Validform_loading{
	padding-left:20px;
	background:url(../images/validform-onLoad.gif) no-repeat left center;
}
#Validform_msg{color:#7d8289; font: 12px/1.5 tahoma, arial, \5b8b\4f53, sans-serif; width:280px; -webkit-box-shadow:2px 2px 3px #aaa; -moz-box-shadow:2px 2px 3px #aaa; background:#fff; position:absolute; top:0px; right:50px; z-index:99999; display:none;filter: progid:DXImageTransform.Microsoft.Shadow(Strength=3, Direction=135, Color='#999999');}
#Validform_msg .iframe{position:absolute; left:0px; top:-1px; z-index:-1;}
#Validform_msg .Validform_title{line-height:25px; height:25px; text-align:left; font-weight:bold; padding:0 8px; color:#fff; position:relative; background-color:#000;}
#Validform_msg a.Validform_close:link,#Validform_msg a.Validform_close:visited{line-height:22px; position:absolute; right:8px; top:0px; color:#fff; text-decoration:none;}
#Validform_msg a.Validform_close:hover{color:#cc0;}
#Validform_msg .Validform_info{padding:8px;border:1px solid #000; border-top:none; text-align:left;}
/*==========Validform样式结束===========*/



